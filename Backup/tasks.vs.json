{
  "version": "0.2.1",
  "tasks": [
    {
      "taskLabel": "flatbuffer-build",
      "appliesTo": "*.fbs",
      "type": "launch",
      "contextType": "custom",
      "command": "flatc.exe",
      "args": [ "--cpp", "-o ${fileDirname}", "-I ${fileDirname}/../Common", "${file}", "--gen-object-api" ]
    },
    {
      "taskLabel": "execute-batch",
      "appliesTo": "*.bat",
      "type": "launch",
      "contextType": "custom",
      "command": "cmd.exe",
      "args": [ "${file}" ]
    }
  ]
}