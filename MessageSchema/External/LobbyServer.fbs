include "Constant.fbs";
include "CharacterInfo.fbs";
include "ServerInfo.fbs";

namespace GenericBoson.Zozo;

table AuthReq
{
    account : string;
    password : string;
}

table AuthAck
{
    result_code : ResultCode;
    user_id : long;
    token : string;
}

table ServerListReq {}

table ServerListAck
{
    result_code : ResultCode;
    server_infos: [ServerInfo];
}

union LobbyPayload
{
    AuthReq,
    AuthAck,
    ServerListReq,
    ServerListAck,
}

table LobbyMessage
{
    payload : LobbyPayload;
}

root_type AuthReq;
root_type AuthAck;
root_type ServerListReq;
root_type ServerListAck;
root_type LobbyMessage;