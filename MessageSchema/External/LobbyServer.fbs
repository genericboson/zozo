include "Constant.fbs";
include "CharacterInfo.fbs";
include "ServerInfo.fbs";
include "LobbyGame.fbs";

namespace GenericBoson.Zozo;

table AuthReq
{
    account : string;
    password : string;
}

table AuthAck
{
    result_code : ResultCode;
    token : string;
}

table LoginReq
{
    account : string;
    token : string;
}

table LoginAck
{
    result_code : ResultCode;
    server_infos: [ServerInfo];
    characters  : [CharacterInfo];
}

union LobbyPayload
{
    AuthReq,
    AuthAck,
    LoginReq,
    LoginAck,
    RegisterReq,
    RegisterAck,
}

table LobbyMessage
{
    payload : LobbyPayload;
}

root_type AuthReq;
root_type AuthAck;
root_type LoginReq;
root_type LoginAck;
root_type LobbyMessage;